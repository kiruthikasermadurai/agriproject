# Ignore node_modules and build/dist folders
node_modules/* linguist-vendored
build/* linguist-vendored
dist/* linguist-vendored
coverage/* linguist-vendored

# Ignore public/vendor assets
public/* linguist-vendored
vendor/* linguist-vendored

# Ignore minified and bundled files
*.min.js linguist-vendored
*.bundle.js linguist-vendored

# Treat JSX files as JavaScript
*.jsx linguist-language=JavaScript

# Optional: If using TypeScript in parts of the project
# *.js linguist-language=TypeScript

# Ignore environment files
*.env linguist-vendored
